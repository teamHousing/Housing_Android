<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamhousing.housing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_housing"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_housing_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Housing_Android"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.splash.SplashActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.home.detail.HomeDetailActivity"/>
        <activity android:name=".ui.home.ask.PromiseActivity" />
        <activity android:name=".ui.home.ask.AskActivity" />
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.join.JoinActivity"/>
    </application>

</manifest>