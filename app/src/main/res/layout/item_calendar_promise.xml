<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/border_orange_fill_11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/border_black_fill_1000"
                android:fontFamily="@font/apple_sd_gothic_neo"
                android:text="고장/수리"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="9dp"
                app:layout_constraintStart_toEndOf="@id/img_dot"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="에 대한 약속"
                android:fontFamily="@font/apple_sd_gothic_neo"
                android:textFontWeight="300"
                android:textColor="@color/primary_black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@id/txt_category"
                app:layout_constraintStart_toEndOf="@id/txt_category"
                app:layout_constraintTop_toTopOf="@id/txt_category" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="약속 제목"
                android:fontFamily="@font/apple_sd_gothic_neo"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textColor="@color/primary_black"
                app:layout_constraintStart_toStartOf="@id/txt_category"
                app:layout_constraintTop_toBottomOf="@id/txt_category" />

            <TextView
                android:id="@+id/txt_how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:text="약속 방법"
                android:fontFamily="@font/apple_sd_gothic_neo"
                android:textFontWeight="300"
                android:textColor="@color/gray_5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_title"
                app:layout_constraintTop_toBottomOf="@id/txt_title" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/txt_how"
                app:layout_constraintStart_toEndOf="@+id/txt_how"
                android:fontFamily="@font/apple_sd_gothic_neo"
                android:textFontWeight="300"
                android:textColor="@color/gray_5"
                android:textSize="12dp"
                android:text="오후 12:00~15:00"
                android:layout_marginLeft="8dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>