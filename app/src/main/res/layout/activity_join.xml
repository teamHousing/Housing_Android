<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <data>
        <variable
            name="joinViewModel"
            type="com.teamhousing.housing.ui.join.JoinActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:text="이름"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <EditText
            android:id="@+id/et_join_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/et_focus_check"
            android:ems="10"
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:hint="이름을 입력해 주세요."
            android:privateImeOptions="defaultInputmode=korean"
            android:inputType="textNoSuggestions|textPersonName"
            android:textColorHint="@color/gray_4"
            android:textCursorDrawable="@drawable/cursur_orange_line"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:text="나이"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_join_name"
            app:layout_constraintTop_toBottomOf="@+id/et_join_name" />

        <EditText
            android:id="@+id/et_join_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/et_focus_check"
            android:ems="10"
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:hint="나이를 입력해 주세요."
            android:inputType="number"
            android:textColorHint="@color/gray_4"
            android:textCursorDrawable="@drawable/cursur_orange_line"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_join_name"
            app:layout_constraintStart_toStartOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/baskerville_bold"
            android:text="Join"
            android:textColor="@color/primary_black"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:text="아이디"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_join_age"
            app:layout_constraintTop_toBottomOf="@+id/et_join_age" />

        <EditText
            android:id="@+id/et_join_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/et_focus_check"
            android:ems="10"
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:hint="아이디를 입력해 주세요."
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:textColorHint="@color/gray_4"
            android:textCursorDrawable="@drawable/cursur_orange_line"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_join_age"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:text="비밀번호"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_join_id"
            app:layout_constraintTop_toBottomOf="@+id/et_join_id" />

        <EditText
            android:id="@+id/et_join_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/et_focus_check"
            android:ems="10"
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:hint="비밀번호를 입력해 주세요."
            android:inputType="textPassword|textNoSuggestions"
            android:textColorHint="@color/gray_4"
            android:textCursorDrawable="@drawable/cursur_orange_line"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/et_join_id"
            app:layout_constraintStart_toStartOf="@+id/textView28"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/apple_sd_gothic_neo_medium"
            android:text="비밀번호 재확인"
            android:textColor="@color/primary_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_join_pw"
            app:layout_constraintTop_toBottomOf="@+id/et_join_pw" />

        <EditText
            android:id="@+id/et_join_pw_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/et_focus_check"
            android:ems="10"
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:hint="다시 한 번 입력해 주세요."
            android:inputType="textPassword|textNoSuggestions"
            android:textColorHint="@color/gray_4"
            android:textCursorDrawable="@drawable/cursur_orange_line"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="@+id/et_join_pw"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/textView29" />

        <Button
            android:id="@+id/btn_join_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/border_gray_fill_200"
            android:enabled="false"
            android:fontFamily="@font/apple_sd_gothic_neo_bold"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_join_pw_c" />

        <ImageView
            android:id="@+id/btn_join_nameclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_join_name"
            app:layout_constraintEnd_toEndOf="@+id/et_join_name"
            app:layout_constraintTop_toTopOf="@+id/et_join_name"
            app:srcCompat="@drawable/btn_close" />

        <ImageView
            android:id="@+id/btn_join_ageclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_join_age"
            app:layout_constraintEnd_toEndOf="@+id/et_join_age"
            app:layout_constraintTop_toTopOf="@+id/et_join_age"
            app:srcCompat="@drawable/btn_close" />

        <ImageView
            android:id="@+id/btn_join_idclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_join_id"
            app:layout_constraintEnd_toEndOf="@+id/et_join_id"
            app:layout_constraintTop_toTopOf="@+id/et_join_id"
            app:srcCompat="@drawable/btn_close" />

        <ImageView
            android:id="@+id/btn_join_pwclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_join_pw"
            app:layout_constraintEnd_toEndOf="@+id/et_join_pw"
            app:layout_constraintTop_toTopOf="@+id/et_join_pw"
            app:srcCompat="@drawable/btn_close" />

        <ImageView
            android:id="@+id/btn_join_pwc_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/et_join_pw_c"
            app:layout_constraintEnd_toEndOf="@+id/et_join_pw_c"
            app:layout_constraintTop_toTopOf="@+id/et_join_pw_c"
            app:srcCompat="@drawable/btn_close" />

        <TextView
            android:id="@+id/tv_join_pwc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:fontFamily="@font/apple_sd_gothic_neo_light"
            android:textSize="14sp"
            android:visibility="invisible"
            android:textColor="@color/red"
            app:layout_constraintStart_toStartOf="@+id/et_join_pw_c"
            app:layout_constraintTop_toBottomOf="@+id/et_join_pw_c" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>